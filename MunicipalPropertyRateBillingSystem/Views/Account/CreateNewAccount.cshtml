<script>
    document.addEventListener('DOMContentLoaded', function() {
        const sameAsPhysicalCheckbox = document.getElementById('sameAsPhysical');
        const postalAddressFields = document.getElementById('postalAddressFields');
        const physicalFields = [
            'physicalAddress1', 'physicalAddress2', 'physicalAddress3',
            'physicalSuburbTownship', 'physicalCity', 'physicalProvince', 'physicalPostalCode'
        ];
        const postalFields = [
            'postalAddress1', 'postalAddress2', 'postalAddress3',
            'postalSuburbTownship', 'postalCity', 'postalProvince', 'postalPostalCode'
        ];

        sameAsPhysicalCheckbox.addEventListener('change', function() {
            if (this.checked) {
                // Copy values from physical to postal
                physicalFields.forEach((fieldId, index) => {
                    document.getElementById(postalFields[index]).value = document.getElementById(fieldId).value;
                    document.getElementById(postalFields[index]).readOnly = true;
                });
                postalAddressFields.classList.add('opacity-50', 'pointer-events-none');
            } else {
                // Clear postal fields and enable
                postalFields.forEach(fieldId => {
                    document.getElementById(fieldId).value = '';
                    document.getElementById(fieldId).readOnly = false;
                });
                postalAddressFields.classList.remove('opacity-50', 'pointer-events-none');
            }
        });
    });

</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const select = document.getElementById("detailSelection");
        const buttons = document.querySelectorAll("button[data-modal-target]");

        select.addEventListener("change", function () {
            const selectedValue = select.value;

            buttons.forEach(button => {
                if (button.getAttribute("data-modal-target") === selectedValue + "Modal") {
                    button.style.display = "inline-block";
                } else {
                    button.style.display = "none";
                }
            });
        });
    });
</script>
