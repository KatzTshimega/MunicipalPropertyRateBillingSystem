<div class="card bg-white dark:bg-zink-700 shadow-md rounded-md mt-6">
    <div class="card-body">
        <h5 class="mb-4 text-xl font-semibold text-gray-800 dark:text-zink-100">Create New Account</h5>

        <form>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-4">
                <div>
                    <label for="accountTitle" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Title</label>
                    <select id="accountTitle" name="accountTitle" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100">
                        <option value="">Select Title</option>
                        <option value="Mr">Mr.</option>
                        <option value="Mrs">Mrs.</option>
                        <option value="Ms">Ms.</option>
                        <option value="Dr">Dr.</option>
                        <option value="Prof">Prof.</option>
                    </select>
                </div>

                <div>
                    <label for="accountName" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Name <span class="text-red-500">*</span></label>
                    <input type="text" id="accountName" name="accountName" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100" required>
                </div>

                <div>
                    <label for="accountSurname" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Surname <span class="text-red-500">*</span></label>
                    <input type="text" id="accountSurname" name="accountSurname" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100" required>
                </div>

                <div>
                    <label for="accountIDNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">ID Number <span class="text-red-500">*</span></label>
                    <input type="text" id="accountIDNumber" name="accountIDNumber" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100" required>
                </div>

                <div>
                    <label for="accountOwnerType" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Owner Type <span class="text-red-500">*</span></label>
                    <select id="accountOwnerType" name="accountOwnerType" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100" required>
                        <option value="">Select Owner Type</option>
                        <option value="individual">Individual</option>
                        <option value="company">Company</option>
                        <option value="trust">Trust</option>
                    </select>
                </div>

                <div>
                    <label for="accountCellNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Cell Number</label>
                    <input type="tel" id="accountCellNumber" name="accountCellNumber" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100">
                </div>

                <div>
                    <label for="accountHomeNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Home Number</label>
                    <input type="tel" id="accountHomeNumber" name="accountHomeNumber" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100">
                </div>

                <div>
                    <label for="accountWorkNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Work Number</label>
                    <input type="tel" id="accountWorkNumber" name="accountWorkNumber" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100">
                </div>

                <div>
                    <label for="accountFaxNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Fax Number</label>
                    <input type="tel" id="accountFaxNumber" name="accountFaxNumber" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100">
                </div>

                <div>
                    <label for="accountVatNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">VAT Number</label>
                    <input type="text" id="accountVatNumber" name="accountVatNumber" class="w-full px-3 py-2 border border-slate-200 dark:border-zink-500 rounded-md shadow-sm focus:outline-none focus:ring-custom-500 focus:border-custom-500 dark:bg-zink-700 dark:text-zink-100">
                </div>
            </div>

            <div class="mb-6 border-t border-slate-200 dark:border-zink-500 pt-4">
