                    button.classList.remove('active:text-custom-600', 'active:border-custom-600', 'dark:active:text-custom-400', 'dark:active:border-custom-400');
                    button.classList.remove('border-custom-600', 'text-custom-600', 'dark:border-custom-400', 'dark:text-custom-400'); // Remove current active styles
                    button.setAttribute('aria-selected', 'false');
                });

                // Show the target tab content and activate its button
                const targetContent = document.querySelector(tabId);
                if (targetContent) {
                    targetContent.classList.remove('hidden');
                    targetContent.classList.add('block'); // Show content

                    const correspondingButton = document.querySelector(`[data-tabs-target="${tabId}"]`);
                    if (correspondingButton) {
                        correspondingButton.classList.add('active:text-custom-600', 'active:border-custom-600', 'dark:active:text-custom-400', 'dark:active:border-custom-400');
                        correspondingButton.classList.add('border-custom-600', 'text-custom-600', 'dark:border-custom-400', 'dark:text-custom-400'); // Apply active styles
                        correspondingButton.setAttribute('aria-selected', 'true');
                    }
                }
            }

            // Set the first tab as active by default on page load
            activateTab('#propertyCategoryContent');

            // Add event listeners to tab buttons
            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetTabId = this.getAttribute('data-tabs-target');
                    activateTab(targetTabId);
                });
            });
        });
    </script>
