@{
    Layout = "_Layout";
}

<div class="card bg-white dark:bg-zink-700 shadow-md rounded-md mt-6">
    <div class="card-header border-b border-slate-200 dark:border-zink-500 p-4">
        <h5 class="text-lg font-semibold text-gray-800 dark:text-zink-100">Add New Position</h5>
    </div>
    <div class="card-body p-4">
        <form>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-end mb-4">
                <div>
                    <label for="positionName" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Name</label>
                    <input type="text" id="positionName" name="positionName"
                           class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                      bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                      placeholder-gray-400 dark:placeholder-zink-400
                      focus:ring-custom-500 focus:border-custom-500
                      transition-all duration-150 ease-in-out"
                           placeholder="Enter position name">
                </div>
                <div>
                    <label for="shortDescription" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Short Description</label>
                    <input type="text" id="shortDescription" name="shortDescription"
                           class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                      bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                      placeholder-gray-400 dark:placeholder-zink-400
                      focus:ring-custom-500 focus:border-custom-500
                      transition-all duration-150 ease-in-out"
                           placeholder="Enter a brief description">
                </div>
            </div>

            <div class="grid grid-cols-1 gap-4 mb-4">
                <div>
                    <label for="longDescription" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Long Description</label>
                    <textarea id="longDescription" name="longDescription" rows="3"
                              class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                         bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                         placeholder-gray-400 dark:placeholder-zink-400
                         focus:ring-custom-500 focus:border-custom-500
                         transition-all duration-150 ease-in-out"
                              placeholder="Enter a detailed description"></textarea>
                </div>
            </div>
            <div class="flex justify-end gap-2">
                <button type="button"
                        class="inline-flex items-center px-4 py-2 border border-gray-300 dark:border-zink-400 rounded-md
                                       font-semibold text-gray-700 dark:text-zink-200 bg-white dark:bg-zink-600
                                       hover:bg-gray-50 dark:hover:bg-zink-500
                                       focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-400
                                       transition-all duration-150 ease-in-out">
                    Cancel
                </button>
                <button type="submit"
                        class="inline-flex items-center px-4 py-2 border border-transparent rounded-md
                                       font-semibold text-white bg-custom-500 hover:bg-custom-600
                                       focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-custom-500
                                       transition-all duration-150 ease-in-out">
                    <i data-lucide="plus" class="h-4 w-4 mr-2"></i> Submit
                </button>
            </div>
        </form>
    </div>
</div>


<div class="card bg-white dark:bg-zink-700 shadow-md rounded-md mt-6">
    <div class="card-header border-b border-slate-200 dark:border-zink-500 p-4">
        <h5 class="text-lg font-semibold text-gray-800 dark:text-zink-100">Position List</h5>
    </div>
    <div class="card-body p-4">
        <div class="overflow-x-auto">
            <table id="basic_tables" class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-zink-200">
                <thead class="text-xs uppercase bg-gray-50 dark:bg-zink-600 text-gray-700 dark:text-zink-200">
                    <tr>
                        <th scope="col" class="px-4 py-3 font-semibold border-b border-gray-200 dark:border-zink-600">Name</th>
                        <th scope="col" class="px-4 py-3 font-semibold border-b border-gray-200 dark:border-zink-600">Short Description</th>
                        <th scope="col" class="px-4 py-3 font-semibold border-b border-gray-200 dark:border-zink-600">Long Description</th>
                        <th scope="col" class="px-4 py-3 font-semibold border-b border-gray-200 dark:border-zink-600 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dummy Data for Positions -->
                    <tr class="bg-white dark:bg-zink-700 hover:bg-gray-50 dark:hover:bg-zink-600 border-b last:border-b-0 border-gray-200 dark:border-zink-600">
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Senior Developer</td>
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Leads development projects.</td>
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Responsible for designing, developing, and maintaining software applications. Mentors junior developers and ensures code quality.</td>
                        <td class="px-4 py-3 text-center">
                            <div class="flex items-center justify-center gap-2">
                                <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-xs font-medium text-white bg-custom-500 hover:bg-custom-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-custom-500 transition-all duration-150 ease-in-out">
                                    <i data-lucide="edit" class="h-3.5 w-3.5 mr-1"></i> Edit
                                </button>
                                <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-xs font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-150 ease-in-out">
                                    <i data-lucide="trash-2" class="h-3.5 w-3.5 mr-1"></i> Remove
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr class="bg-white dark:bg-zink-700 hover:bg-gray-50 dark:hover:bg-zink-600 border-b last:border-b-0 border-gray-200 dark:border-zink-600">
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Project Manager</td>
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Oversees project execution.</td>
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Manages project lifecycle from planning to completion, ensuring deadlines and budgets are met. Communicates with stakeholders.</td>
                        <td class="px-4 py-3 text-center">
                            <div class="flex items-center justify-center gap-2">
                                <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-xs font-medium text-white bg-custom-500 hover:bg-custom-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-custom-500 transition-all duration-150 ease-in-out">
                                    <i data-lucide="edit" class="h-3.5 w-3.5 mr-1"></i> Edit
                                </button>
                                <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-xs font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-150 ease-in-out">
                                    <i data-lucide="trash-2" class="h-3.5 w-3.5 mr-1"></i> Remove
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr class="bg-white dark:bg-zink-700 hover:bg-gray-50 dark:hover:bg-zink-600 border-b last:border-b-0 border-gray-200 dark:border-zink-600">
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">HR Specialist</td>
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Handles HR operations.</td>
                        <td class="px-4 py-3 text-gray-700 dark:text-zink-100">Manages recruitment, employee relations, and compliance with labor laws. Supports employee development programs.</td>
                        <td class="px-4 py-3 text-center">
                            <div class="flex items-center justify-center gap-2">
                                <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-xs font-medium text-white bg-custom-500 hover:bg-custom-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-custom-500 transition-all duration-150 ease-in-out">
                                    <i data-lucide="edit" class="h-3.5 w-3.5 mr-1"></i> Edit
                                </button>
                                <button type="button" class="inline-flex items-center px-3 py-1.5 border border-transparent rounded-md text-xs font-medium text-white bg-red-500 hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-150 ease-in-out">
                                    <i data-lucide="trash-2" class="h-3.5 w-3.5 mr-1"></i> Remove
                                </button>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="~/js/datatables/jquery-3.7.0.js"></script>
<script src="~/js/datatables/data-tables.min.js"></script>
