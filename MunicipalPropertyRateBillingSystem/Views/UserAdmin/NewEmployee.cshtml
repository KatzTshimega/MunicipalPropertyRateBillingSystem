                                          placeholder-gray-400 dark:placeholder-zink-400
                                          focus:ring-custom-500 focus:border-custom-500
                                          transition-all duration-150 ease-in-out"
                           placeholder="Enter first name">
                </div>
                <!-- Surname -->
                <div>
                    <label for="employeeSurname" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Surname <span class="text-red-500">*</span></label>
                    <input type="text" id="employeeSurname" name="employeeSurname" required
                           class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                                          bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                                          placeholder-gray-400 dark:placeholder-zink-400
                                          focus:ring-custom-500 focus:border-custom-500
                                          transition-all duration-150 ease-in-out"
                           placeholder="Enter surname">
                </div>
                <!-- ID Number -->
                <div>
                    <label for="employeeIdNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">ID Number <span class="text-red-500">*</span></label>
                    <input type="text" id="employeeIdNumber" name="employeeIdNumber" required
                           class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                                          bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                                          placeholder-gray-400 dark:placeholder-zink-400
                                          focus:ring-custom-500 focus:border-custom-500
                                          transition-all duration-150 ease-in-out"
                           placeholder="Enter ID number">
                </div>
                <!-- Employee Number -->
                <div>
                    <label for="employeeNumber" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Employee Number <span class="text-red-500">*</span></label>
                    <input type="text" id="employeeNumber" name="employeeNumber" required
                           class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                                          bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                                          placeholder-gray-400 dark:placeholder-zink-400
                                          focus:ring-custom-500 focus:border-custom-500
                                          transition-all duration-150 ease-in-out"
                           placeholder="Enter employee number">
                </div>
                <!-- Position -->
                <div>
                    <label for="employeePosition" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Position <span class="text-red-500">*</span></label>
                    <input type="text" id="employeePosition" name="employeePosition" required
                           class="form-input w-full px-3 py-2 border border-gray-300 dark:border-zink-500 rounded-md
                                          bg-white dark:bg-zink-600 text-gray-900 dark:text-zink-100
                                          placeholder-gray-400 dark:placeholder-zink-400
                                          focus:ring-custom-500 focus:border-custom-500
                                          transition-all duration-150 ease-in-out"
                           placeholder="Enter position">
                </div>
                <!-- Department -->
                <div>
                    <label for="employeeDepartment" class="block text-sm font-medium text-gray-700 dark:text-zink-200 mb-1">Department <span class="text-red-500">*</span></label>
                    <input type="text" id="employeeDepartment" name="employeeDepartment" required
